[alias]
	co = checkout
	ci = commit
	st = "status -s -b"
	br = branch
	di = diff
	ad = add
	ls = log --stat
	ll = log --oneline --left-right --graph
	lll = log --graph --pretty=format:'%Cblue%h%Creset%d %Cgreen%an%Creset: %s %Cblue%ar%Creset'
	pr = pull --rebase
	rst = reset
	# print current branch
	cbr = "!$SHELL -c \"git br|grep  '^*'|cut -f 2 -d ' '\""
  # checkout new branch from master
	cob = "!$SHELL -c \"git checkout -b $1 master\""
  # delete all branch ignore master
  brd = "!$SHELL -c \"git branch | grep -v '\<master\>' | xargs  git branch -d\""
  brD = "!$SHELL -c \"git branch | grep -v '\<master\>' | xargs  git branch -D\""

	odt-pl = pull --rebase origin develop
	odt-ps = "!$SHELL -c \"git push origin $1:develop\""
	odt-autops = "!$SHELL -c \"git odt-pr; git odt-ps `git cbr`\""
[user]
	name = Jun Fukaya
	email = fukajun.shark@gmail.com
[color]
	branch = true
	diff = true
	interactive = true
	status = true
	ui = auto
[core]
	editor = vim
